@page
@model Wikipedia.Pages.Shared.EditeazaArticolModel
@{
    ViewData["Title"] = "Editeaza Articol";
}

<h2>Editeaza stirea</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Articol.Id" />

    <div>
        <input asp-for="@Model.Articol.Titlu" />
    </div>

    <div>
        <input asp-for="@Model.Articol.Continut" />
    </div>

    <div>
        <input asp-for="@Model.Articol.Autor" />
    </div>

    <label>Imagine:</label>
    <input type="file" name="ImagineNoua" />
    
    <button type="submit" class="w-100 btn btn-lg btn-primary">Salveaza modificarile</button>
</form>
<div>
    <input asp-for="Articol.EsteProtejat" type="checkbox" disabled />
    <label asp-for="Articol.EsteProtejat">Este protejat</label>
</div>

<input type="hidden" asp-for="Articol.EsteProtejat" /> <!-- ca să trimiți valoarea în POST -->
