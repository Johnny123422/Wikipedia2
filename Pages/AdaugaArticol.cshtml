@page
@model Wikipedia.Pages.AdaugaArticolModel
@{
    ViewData["Title"] = "AdaugaArticol";
}
<form method="post" enctype="multipart/form-data">
    <div>
        <label>Titlu </label>
        <input type="text" asp-for="@Model.articol.Titlu" />
    </div>
    <div>
        <label> Autor </label>
        <input type="text" asp-for="@Model.articol.Autor" />
    </div>
    <div>
        <label>Continut </label>
        <input type="text" asp-for="@Model.articol.Continut" />
    </div>

    <label>Imagine:</label>
    <input type="file" name="ImagineFisier" />
    <div>
        <label>Domeniu </label>
        <select asp-for="articol.DomeniuId" asp-items="Model.DomeniiSelectList">
            <option value="">Selecteaza optiunea</option>
        </select>
        
    </div>

    <div>
        <label>Nu poate fi editat</label>
        <input type="checkbox" asp-for="@Model.articol.EsteProtejat" />
    </div>
    <button type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
</form>

